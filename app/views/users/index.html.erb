<p style="color: green"><%= notice %></p>

<h1>Users</h1>
<%= link_to "New user", new_user_path, class: 'btn btn-primary mb-2'  %>

<div id="users">
  <% @users.each do |user| %>
    <%=turbo_stream_from user %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user, class: 'btn btn-secondary mt-2' %>
    </p>
  <% end %>
</div>

